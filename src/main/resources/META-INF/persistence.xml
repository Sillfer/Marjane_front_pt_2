<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="promotion" transaction-type="RESOURCE_LOCAL">
            <properties>
<!--                <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver" />-->
<!--                <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/marjane" />-->
<!--                <property name="jakarta.persistence.jdbc.user" value="postgres" />-->
<!--                <property name="jakarta.persistence.jdbc.password" value="admin" />-->
                <property name="hibernate.show_sql" value="true" />
<!--                <property name="hibernate.persistence.lock.timeout" value="true"/>-->
                <property name="hibernate.format_sql" value="true" />
                <property name="hibernate.hbm2ddl.auto" value="update" />
                <property name="hibernate.connection.url" value="jdbc:postgresql://localhost:5432/marjane"/>
                <property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
                <property name="hibernate.connection.username" value="postgres"/>
                <property name="hibernate.connection.password" value="password"/>
            </properties>
    </persistence-unit>
</persistence>
